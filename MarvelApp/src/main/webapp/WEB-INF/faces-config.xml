<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
   <name>primefaces_avalon</name>
    
    <component>
        <component-type>org.primefaces.component.AvalonMenu</component-type>
        <component-class>org.primefaces.avalon.component.AvalonMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.AvalonMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.avalon.component.AvalonMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
    <lifecycle>
        <phase-listener>com.marvel.developer.config.LoginErrorPhaseListener</phase-listener>
    </lifecycle>
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.marvel.developer.i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>   
</faces-config>
